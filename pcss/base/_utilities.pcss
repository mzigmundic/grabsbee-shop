/* Utility classes */
.display-block {
  display: block;
}

.no-scroll {
  overflow: hidden;
  height: 100vh;
}

.no-scroll::-webkit-scrollbar {
  display: none;
}

.visually-hidden {
  @mixin no-display;
}

.visually-hidden--desktop {
  @media (--large) {
    @mixin no-display;
  }
}

.details-disabled-on-large {
  pointer-events: none;
}